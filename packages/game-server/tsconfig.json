{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "removeComments": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "paths": { "@rcg/common": "../common/src" }
}
